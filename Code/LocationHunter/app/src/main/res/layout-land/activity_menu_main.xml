<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlue"
    tools:context="com.mzdev.maxime.locationhunt.menuMainActivity">

    <Button
        android:id="@+id/bPlay"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="421dp"
        android:layout_marginTop="31dp"
        android:onClick="startPlay"
        android:backgroundTint="@color/colorButton"
        android:text="@string/Play"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSettings"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_marginBottom="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="363dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/colorButton"
        android:text="@string/Settings"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="goSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAccount" />

    <Button
        android:id="@+id/bAccount"
        android:layout_width="235dp"
        android:layout_height="62dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="341dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorButton"
        android:text="@string/Account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="goMyAccountIntent"
        app:layout_constraintBottom_toTopOf="@+id/bSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bPlay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="175dp"
        android:layout_marginBottom="73dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/location_logo_hunter" />
</android.support.constraint.ConstraintLayout>
